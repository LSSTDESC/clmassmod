#!/bin/bash

snap=41

for sampling in 0 3 4; do

    for noise in 0 1 2 3; do

	for r in 2 5 8 14; do

		for mc in c4 duffy; do

		    config=${mc}-r${r}-n${sampling}_${noise}
		    dir=../mxxl_imperial/mxxlsnap$snap/$config
		    mkdir $dir
		    cat base.sh maxlike.sh mxxl.sh ${mc}.sh r${r}.sh n${sampling}_${noise}.sh > $dir/config.sh

		    echo $config >> ../run7

		    done

		done

	    done

	done

    done

done
	